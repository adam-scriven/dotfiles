" C/C++ file settings

" file indentation
setlocal expandtab
setlocal cindent
setlocal cinoptions+=:0,g0,(0

" folding
setlocal foldmethod=marker
setlocal foldmarker={,}
setlocal foldnestmax=10    " 10 levels max
setlocal foldlevel=10      " start at the top level
setlocal nofoldenable      " disable fold be default
